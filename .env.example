# AI API Configuration
# Choose one: OpenAI, Anthropic, or Gemini
AI_PROVIDER=gemini  # Options: "openai", "anthropic", or "gemini"

# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Anthropic/Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (if using Gemini) - FREE at ai.google.dev
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI Model Selection
OPENAI_MODEL=gpt-4-turbo-preview  # Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo

# Anthropic Model Selection
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022  # Options: claude-3-5-sonnet-20241022, claude-3-opus-20240229

# Gemini Model Selection (FREE!)
GEMINI_MODEL=gemini-2.0-flash-exp  # Options: gemini-2.0-flash-exp, gemini-1.5-flash, gemini-1.5-pro

# CapCut Configuration
GAP_BETWEEN_REELS_SECONDS=30
MAX_REEL_DURATION=58

# Cut Buffer Configuration (prevents cutting words mid-sentence)
# Adds breathing room at the start and end of each cut
CUT_START_BUFFER_SECONDS=0.8  # Buffer before each cut starts (default: 0.8s)
CUT_END_BUFFER_SECONDS=0.8    # Buffer after each cut ends (default: 0.8s)

# Transcription Configuration
TRANSCRIPTION_METHOD=local  # Options: "local" (Whisper) or "online" (AI API)
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large (only used if TRANSCRIPTION_METHOD=local)

# Gemini Rate Limiting (FREE tier: 15 requests/minute)
# Increase this if you hit quota limits frequently
GEMINI_API_DELAY_SECONDS=5  # Seconds to wait between API calls (default: 5)

# Reel Generation Settings
MIN_REELS_PER_3MIN=1  # Minimum number of reels to generate per 3 minutes of video (default: 1)
REEL_GENERATION_MODE=balanced  # Options: "conservative" (fewer, safer reels), "balanced" (default), "aggressive" (maximum reels)
